FROM golang:1.17.8-alpine3.15 as builder
# hadolint ignore=DL3018
RUN apk add --no-cache make gcc libc-dev git curl
WORKDIR /go/src/github.com/WolffunGame/experiment-agent
COPY go.mod .
COPY go.sum .
RUN go mod download
COPY . .
RUN go get github.com/rakyll/statik \
    && statik -src=api/openapi-spec \
    && go build -o optimizely cmd/optimizely/main.go

FROM alpine:3.10
# hadolint ignore=DL3018
RUN apk add --no-cache ca-certificates
COPY --from=builder /go/src/github.com/WolffunGame/experiment-agent/optimizely /optimizely
CMD ["/optimizely"]
